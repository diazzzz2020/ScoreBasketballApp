<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/team_a_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team A"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/score_team_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="48sp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/button_team_a_one_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1 Point"/>

    <Button
        android:id="@+id/button_team_a_two_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+2 Points"/>

    <Button
        android:id="@+id/button_team_a_three_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+3 Points"/>

    <TextView
        android:id="@+id/team_b_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team B"
        android:textSize="24sp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/score_team_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="48sp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/button_team_b_one_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1 Point"/>

    <Button
        android:id="@+id/button_team_b_two_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+2 Points"/>

    <Button
        android:id="@+id/button_team_b_three_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+3 Points"/>

    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_marginTop="24dp"/>

</LinearLayout>
